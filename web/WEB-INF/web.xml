<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>wypozyczalnia</display-name>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <security-role>
        <role-name>uzytkownik</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/stronaGlowna</form-login-page>
            <form-error-page>/login</form-error-page>
        </form-login-config>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>regula</web-resource-name>
            <url-pattern>/index</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>uzytkownik</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>utils.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>EdycjaSklepu</servlet-name>
        <jsp-file>/WEB-INF/views/wyborSklepu.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EdycjaSklepu</servlet-name>
        <url-pattern>/wybierzSklep</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CzyUsunFilm</servlet-name>
        <jsp-file>/WEB-INF/views/czyUsunFilm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CzyUsunFilm</servlet-name>
        <url-pattern>/czyUsunFilm</url-pattern>
    </servlet-mapping>
</web-app>
